extends ../layouts/main
block content
  table.jobs
    thead
      tr(class='header')
        th 职位名称
        th 工作地点
        th 薪资(元/月)
        th 职责
        th 要求
        th 备注
        th 操作
    tbody
      each job in jobs
        tr(data-job-id=job.id)
          td= job.title
          td= job.address
          td= job.salary
          td= job.duty
          td= job.requirement
          td= job.notes
          td
            button(type='button' class='apply-job') 申请
