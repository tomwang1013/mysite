extends ../layouts/main
block js
  script(src='/ckeditor/ckeditor.js')
  script(src='/js/answers.js')
  script CKEDITOR.replace('content')
block css
  link(href="/css/answers.css", rel="stylesheet")
block content
  .answer-new
    .answer-new-head.text-bold
      | 你正在为
      a.job-title(href='/job/' + job.id)= job.title
      | 做面试题解答
    .question
      strong 题目：
      .question-content!= question.content
    .answer-content
      strong 你的答案：
      form.answer-new-form(method='post' action='/question/' + question.id + '/answer/' + answer.id + '/update')
        textarea(name='content' id='content')!= answer.content
        .form-group
          input.btn.btn-primary(type='submit' value='保 存')
