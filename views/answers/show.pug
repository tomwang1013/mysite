extends ../layouts/main
block js
  script(src='/ckeditor/ckeditor.js')
  script(src='/js/answers.js')
  CKEDITOR.replace('content')
block css
  link(href="/css/answers.css", rel="stylesheet")
block content
  .answer-show
    .text-bold.answers-head
      | 职位：
      a.job-title(href='/job/' + job.id)= job.title
    .answers-question
      strong 问题：
      .question-content!= question.content
    .answer-content
      strong 答案：
      .content.small-font!= answer.content
      .opts
        if req.currentUser.type == 0
          a.btn(href='/question/' + question.id + '/answer/' + answer.id + '/edit') 修 改
          button.btn.btn-warning.del-answer 删 除
        else
          if answer.isScored
            span 你已经为此解答打分：#{answer.score} 分（总分100）
          else
            button.btn.btn-primary.to-score 为此解答评分
      .score-comment(style={display: 'none'})
        form.set-score(method='post' action='/question/' + question.id + '/answer/' + answer.id + '/update')
          .form-group
            label.label.label-input(for='score') 分数：
            input(type='text', name='score', id='score', placeholder='0 ~ 100' class='form-control')
          .form-group
            label.label.label-input(for='comment') 分数：
            textarea(name='comment', id='comment', class='form-control')
          .form-group
            input(type='submit' value='提 交')
