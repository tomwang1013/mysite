extends _layout.pug
append js
  script(src=assetHashPath('question/new_edit.js'))
  script(src='/ckeditor/ckeditor.js')
block content
  .c-ques-n-e
    .c-ques-common-head
      span.fir-span 您正在为职位
      a.fir-span(href='/job/' + job.id)= job.title
      span 修改一道试题：

    - var uri = '/job/' + job.id + '/question/' + question.id + '/update'
    form.c-ques-n-e__fm.js-ques-n-e-fm(method='post' action=uri)
      .o-fm-grp
        label(for='title') 标题：
        input(type='text' name='title', id='title' class='o-fm-ctl', value=question.title, autofocus)

      .o-fm-grp
        label(for='tag') 分类：
        select(name='tag', id='tag' class='o-fm-ctl')
          option(value='' selected) 请选择
          each t in quesTags
            option(value=t, selected=t == question.tag)= t 

      .o-fm-grp
        label(for='labels') 标签：
        input(type='text' name='labels', id='labels' class='o-fm-ctl' value=question.labels.join(','))

      .o-fm-grp
        label(for='level') 难度：
        select(name='level', id='level' class='o-fm-ctl', required)
          each l in [0,1,2,3,4]
            option(value=l, selected=l == question.level)= l

      .o-fm-grp
        label(for='content') 题目内容：
        textarea(name='content', id='content' class='o-fm-ctl js-rich-editor', required)= question.content

      .o-fm-grp.text-center
        input(type='submit', value='保 存' class='o-btn o-btn-primary')
