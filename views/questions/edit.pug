extends _layout.pug
append js
  script(src=assetHashPath('js/question/new_edit.js'))
  script(src='/ckeditor/ckeditor.js')
block content
  .q-new-edit
    .q-common-head.large-font
      span.fir-span 您正在为职位
      a.fir-span(href='/job/' + job.id)= job.title
      span 修改一道试题：
    form.q-edit(method='post' action='/job/' + job.id + '/question/' + question.id + '/update')
      .form-group
        label(for='title' class='label label-input') 标题：
        input(type='text' name='title', id='title' class='form-control', value=question.title, required, autofocus)
      .form-group
        label(for='tag' class='label label-input') 分类：
        select(name='tag', id='tag' class='form-control', required)
          option(value='' selected) 请选择
          each t in quesTags
            option(value=t, selected=t == question.tag)= t 
      .form-group
        label(for='labels' class='label label-input') 标签：
        input(type='text' name='labels', id='labels' class='form-control' value=question.labels.join(','))
      .form-group
        label(class='label label-input') 难度：
        select(name='level', id='level' class='form-control', required)
          each l in [0,1,2,3,4]
            option(value=l, selected=l == question.level)= l
      .form-group
        label(for='content' class='label label-input') 题目内容：
        textarea(name='content', id='content' class='form-control rich-editor', required)= question.content
      .form-group
        input(type='submit', value='保 存' class='btn btn-primary')
