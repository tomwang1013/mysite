extends _layout.pug
append css
  link(href=assetHashPath("question/new_edit.css"), rel="stylesheet")
append js
  script(src=assetHashPath('question/new_edit.js'))
  script(src='http://assets.mysite.com/ueditor/ueditor.config.js')
  script(src='http://assets.mysite.com/ueditor/ueditor.all.js')
block content
  .c-ques-n-e
    .c-ques-common-head
      span.u-fir-span 您正在为职位
      a.u-fir-span(href='/job/' + job.id)= job.title
      span 新增一道试题：

    - var uri = '/job/' + job.id + '/questions/create'
    form.c-ques-n-e__fm.js-ques-n-e-fm(method='post' action=uri)
      .o-fm-grp
        label(for='title') 标题：
        input(type='text' name='title', id='title' class='o-fm-ctl' autofocus)

      .o-fm-grp
        label(for='tag') 分类：
        select(name='tag', id='tag' class='o-fm-ctl')
          option(value='' selected) 请选择
          each t in quesTags
            option(value=t)= t 

      .o-fm-grp
        label(for='labels') 标签：
        input(type='text' name='labels', id='labels' class='o-fm-ctl')

      .o-fm-grp
        label(for='level') 难度：
        select(name='level', id='level' class='o-fm-ctl')
          each l in [0,1,2,3,4]
            option(value=l)= l

      .o-fm-grp
        label(for='content') 题目内容：
        textarea(name='content', id='content' class='js-rich-editor')

      .o-fm-grp.u-center-text
        input(type='submit', value='保 存' class='o-btn o-btn-primary')
