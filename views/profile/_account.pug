.account
  .header 修改账号信息
  .account-content
    .avatar
      .form-group 头像：
      img(class='current-avatar' width=70 height=70 src=user.avatarUrl() alt=user.name)
      span(class='upload btn-normal relative inline-block')
        label(for='avatar') 上传头像
        input.absolute(type='file' id='avatar' name='avatar')
    .overlay(style={display: 'none'})
    form(method='post' action='/profile/change_avatar2' class='cropDlg' style={display: 'none'})
      .head
        span 裁减并替换新的头像
        a.close × 
      .middle
        .crop-container.hcenter.relative
          img.origin-img
          .cropArea.absolute
            img.crop-img.absolute
          .move-area.crop-edge.absolute
          .left-edge.crop-edge.sep-line.absolute
          .top-edge.crop-edge.sep-line.absolute
          .right-edge.crop-edge.sep-line.absolute
          .bottom-edge.crop-edge.sep-line.absolute
          .corner.tl-corner.crop-edge.absolute
          .corner.tm-corner.crop-edge.absolute
          .corner.tr-corner.crop-edge.absolute
          .corner.lm-corner.crop-edge.absolute
          .corner.rm-corner.crop-edge.absolute
          .corner.bl-corner.crop-edge.absolute
          .corner.bm-corner.crop-edge.absolute
          .corner.br-corner.crop-edge.absolute
      input(type='hidden' name='origin_img_path')
      input(type='hidden' name='x')
      input(type='hidden' name='y')
      input(type='hidden' name='width')
      input(type='hidden' name='height')
      .foot
        input(type='submit' class='btn btn-primary' value='保存')
    form(method='post' action='/profile/change_account' enctype="multipart/form-data" class='account-edit')
      .form-group
        label(for='name' class='label label-input') 用户名：
        input(type='text', name='name', id='name', class='form-control', value=user.name, required)
      .form-group
        label(for='email' class='label label-input') Email：
        input(type='email', name='email', id='email', class='form-control', value=user.email, required)
      .form-group
        label(for='phone' class='label label-input') 电话：
        input(type='text', name='phone', id='phone', class='form-control', value=user.phone)
      .form-group
        input(type='submit', value='更新账号信息' class='btn btn-primary')

  .header 修改密码
  form(method='post' action='/profile/change_password' class='password-edit account-content')
    if flash.success
      .flash-success= flash.success
    else if flash.error
      .flash-error= flash.error
    .form-group
      label(for='old_pwd' class='label label-input') 旧密码：
      input(type='password', name='old_pwd', id='old_pwd', class='form-control')
    .form-group
      label(for='new_pwd' class='label label-input') 新密码：
      input(type='password', name='new_pwd', id='new_pwd', class='form-control', required)
    .form-group
      label(for='c_new_pwd' class='label label-input') 确认新密码：
      input(type='password', name='c_new_pwd', id='c_new_pwd', class='form-control', required)
    .form-group
      input(type='submit', value='更新密码' class='btn btn-primary')
