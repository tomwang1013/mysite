extends ../layouts/main
block js
  script(src='/js/profile.js')
block css
  link(href="/css/profile.css", rel="stylesheet")
block content
  .content
    .flex.profile-container
      ul.left-nav
        li
          a(href='/profile/account' class={active: pos == 'account'}) 账号与密码
          a(href='/profile/user_info' class={active: pos == 'user_info'}) 基本信息
        li
          if user.isStudent()
            a(href='/profile/jobs' class={active: pos == 'jobs'}) 申请的职位
          else
            a(href='/profile/jobs' class={active: pos == 'jobs'}) 发布的职位
      div.right-content
        if pos == 'account'
          include _account.pug
        if pos == 'user_info'
          include _user_info.pug
        else if pos == 'jobs'
          include _jobs.pug
