.c-uc-jobs
  .c-uc-jobs-type.small-font
    a.c-uc-jobs-type__link(href='/profile/jobs?status=all' class={'is-active': status == 'all'}) 全部职位
    a.c-uc-jobs-type__link(href='/profile/jobs?status=replied' class={'is-active': status == 'replied'}) 已经回复的职位
    a.c-uc-jobs-type__link(href='/profile/jobs?status=unreplied' class={'is-active': status == 'unreplied'}) 还未回复的职位

  if !appliedJobs.length
    .u-center-text
      if status == all
        | 你还没有申请任何职位！
      else if status == 'replied'
        | 你还没有任何申请回复！
      else
        | 你还没有任何未回复的申请！
  else
    each appliedJob in appliedJobs
      - var job = appliedJob._job
      .c-uc-job(data-job-id=job.id)
        .c-uc-job__title
          a(href='/job/' + job.id)= job.title

        .c-uc-job__basics.u-small-font
          span 发布日期：<strong>#{job.createdAt.toLocaleDateString()}</strong>
          span 申请日期：<strong>#{appliedJob.createdAt.toLocaleDateString()}</strong>
          span 公司：    <strong>#{job._creator.name}</strong>
          span <strong>#{job.address}</strong>
          span <strong>#{job.displaySalary}</strong>
          span 申请人数：<strong>#{job._appliersSize}</strong>

        .c-uc-job__status.u-small-font
          case appliedJob.status
            when 0
              .u-unknown-result 您的申请正在审核中，请耐心等待
            when 1
              .u-error-result= appliedJob.message
            when 2
              .u-success-result= appliedJob.message
